{
  "name": "@blog/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/index.ts",
    "build": "tsc",
    "start": "node --env-file=.env dist/index.js",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
"prisma:seed": "tsx --env-file=.env prisma/seed.ts",
    "index-posts": "tsx --env-file=.env scripts/index-all-posts.ts","check-embeddings":"tsx --env-file=.env scripts/check-embeddings.ts"
  },
  "dependencies": {
    "@blog/types": "workspace:*",
    "@blog/utils": "workspace:*",
    "@blog/validation": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@langchain/core": "^1.1.29",
    "@langchain/openai": "^1.2.11",
    "@prisma/client": "^6.1.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.3.1",
    "hono": "^4.6.14",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^1.2.28",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@blog/config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
