    "prisma:seed": "tsx --env-file=.env prisma/seed.ts"
  },
  "dependencies": {
    "@blog/types": "workspace:*",
    "@blog/validation": "workspace:*",
    "@blog/utils": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^6.1.0",
    "hono": "^4.6.14",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@blog/config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
